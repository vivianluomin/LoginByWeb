<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_grades"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:hint="@string/grades"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:drawableRight="@mipmap/ic_jiantou"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_semester"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:hint="@string/semester"
            android:layout_marginRight="20dp"
            android:drawableRight="@mipmap/ic_jiantou"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.example.asus1.xiyousearch.Views.WeeksView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/weeks"
          />


        <com.example.asus1.xiyousearch.Views.CurriculumViews
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/curriculum"
            >

        </com.example.asus1.xiyousearch.Views.CurriculumViews>


    </FrameLayout>

    </ScrollView>

</LinearLayout>